<%= form_for(resource, as: resource_name, url: users_signup_path, html: { class: local_assigns[:classname] }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "Full Name", class: 'label' %>
    <%= f.text_field :name, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :email, "Email Address", class: 'label' %>
    <%= f.email_field :email, autocomplete: "email", class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :phone, "Phone Number", class: 'label' %>
    <%= f.phone_field :phone, class: 'input' %>
  </div>

  <div class="actions">
    <%= f.submit "Complete Signup", class: "button is-primary is-fullwidth" %>
  </div>
<% end %>
